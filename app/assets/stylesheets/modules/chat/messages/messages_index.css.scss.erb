@import '../../../globals/_all.scss';

.messages_view__index_container {
  @include scrollable_light_bg;
  display: flex;
  flex-direction: column;
  height: 100%;
  box-sizing: border-box;
}

.messages_view__index {
  max-height: 100%;
  margin-top: auto;
}

.message {
  font-family: $lato;
  display: flex;
  padding: 0.3rem 4rem 0.5rem 2.6rem;

  &:hover {
    background-color: $slack_bg_light;
    & .message__createdAt--gutter {
      visibility: visible;
    }
  }
  &:last-child {
    padding-bottom: 1.7rem;
  }
}

.message_gutter {
  position: relative;
  width: 3.8rem;
  margin-right: 1rem;
  padding: 0.2rem 0 0 0;
}

.message_content {
  line-height: 1.8rem;
}

.message__username {
  font-size: 1.5rem;
  line-height: 1.8rem;
  color: $slack_heading_color;
  font-weight: 900;
  margin: 0 0.8rem 0 0;
}

.message__createdAt {
  font-size: 1.2rem;
  line-height: 1.8rem;
  color: $slack_tip_color;
  font-weight: lighter;
  width: 10rem;

  &--gutter {
    visibility: hidden;
    position: absolute;
    top: 0.2rem;
    right: 0.1rem;
    line-height: 1.8rem;
    text-align: right;
  }
}

.message__body {
  font-size: 1.5rem;
  line-height: 1.8rem;
  color: $slack_message_color;
}

.magic_link_notice {
  padding: 0 0 0.6rem 0;
  position: relative;
  min-height: 15rem;
  background-color: $slack_bg_light;
  margin-bottom: 1.5rem;
  text-align: center;
  font-family: $lato;
  color: $slack_heading_color;
}

.magic_link_notice__content {
  padding: 0 0 0.6rem 0;
  box-sizing: border-box;
}

.magic_link_notice__heading {
  font-size: 2rem;
  margin: 0 0 0.5rem 0;

  &--bold {
    font-weight: 800;
  }
}

.magic_link_notice__copy {
  margin: 1rem 0 1.2rem 0;
  font-size: 1.3rem;
  line-height: 1.4rem;
}

.magic_link_notice__zigzag {
  height: 6px;
  position: absolute;
  bottom: 0px;
  width: 100%;
  background: url(<%= asset_path('zigzag.png') %>) repeat;
}
